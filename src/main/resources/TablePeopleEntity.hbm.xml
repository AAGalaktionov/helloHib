<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hiber.TablePeopleEntity" table="table_people" schema="public" catalog="postgres">
        <id name="name">
            <column name="name" sql-type="varchar(50) []" length="50"/>
        </id>
        <property name="city">
            <column name="city" sql-type="varchar(50) []" length="50"/>
        </property>
        <property name="pet">
            <column name="pet" sql-type="varchar(50) []" length="50"/>
        </property>
        <property name="age">
            <column name="age" sql-type="integer"/>
        </property>
    </class>
</hibernate-mapping>